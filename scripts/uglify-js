rm -f ./dist/app.min.js && find ./dist -type f -name "*.js" -not -path "./dist/bower_components/*" -not -name "*test.js" -not -name "vendor.min.js" -print0 | xargs -0 uglifyjs -o ./dist/app.min.js --

rm -f ./dist/lib.min.js && find ./lib -type f -name "*.js" -not -path "./lib/bower_components/*" -print0 | xargs -0 uglifyjs --no-mangle -o ./dist/lib.min.js --
